name "hwgen"
description "HWGen is a cross-langauge code-generation tool for the Hotwire Fluent REST Library."
authors "Adam Wilson"
copyright "Copyright Â© EllipticBit 2022-2023"
license "BSL-1.0"
targetType "executable"

dependency "sdlang-d" version="0.10.6"

buildType "plain" {
	buildOptions "debugMode" "debugInfo" "alwaysStackFrame" "stackStomping"
}
buildType "debug" {
	buildOptions "debugMode" "debugInfo" "alwaysStackFrame" "stackStomping"
}
buildType "release" {
	buildOptions "releaseMode" "optimize" "inline"
}

dflags "-verrors=context" "-verrors=0"
